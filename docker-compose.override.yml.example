# Docker Compose Override Example

# This file provides examples of how to customize the deployment
# Copy this to docker-compose.override.yml and modify as needed

# Docker Compose automatically merges docker-compose.yml with
# docker-compose.override.yml if it exists

services:
  # Example: Add resource limits
  wireguard:
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 512M
        reservations:
          cpus: '0.5'
          memory: 256M

  l2tp-ipsec:
    deploy:
      resources:
        limits:
          cpus: '1'
          memory: 512M
        reservations:
          cpus: '0.5'
          memory: 256M

